<UserControl x:Class="ColorSwatch.UCTheEnd"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ColorSwatch">
  <Grid>
    <Grid.Background>
      <LinearGradientBrush StartPoint="0 0" EndPoint="0 1">
        <GradientStop Color="Purple" Offset="0" />
        <GradientStop Color="Bisque" Offset="1" />
      </LinearGradientBrush>
    </Grid.Background>
      <TextBlock Text="The End" Foreground="White" FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center" />
  </Grid>
</UserControl>
